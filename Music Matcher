       <!-- Genre Selection Section -->
       <div id="genre-section" class="section">
           <h1>Find Your Next Favorite Genre and Artist!</h1>
           <div id="profile-info"></div>
           <button onclick="generateRandomSelection()">Get Random Genre and Artist!</button>
           <div class="result" id="result"></div>
       </div>
   </div>


   <script>
       let profile = {};
      
       const genres = ["pop", "rock", "jazz", "classical", "hip-hop", "country", "rap", "blues", "folk"];
       const artists = [
           "The Weeknd", "Ed Sheeran", "Ariana Grande", "Elvis Presley",
           "Billie Eilish", "Taylor Swift", "Drake", "Beyonce"
       ];


       function createProfile() {
           const name = document.getElementById('name').value;
           const age = document.getElementById('age').value;
           const genre = document.getElementById('music-genre').value;
           const artist = document.getElementById('combo-box').value;


           const errorMessage = document.getElementById('error-message');
           errorMessage.innerText = ''; // Clear previous messages


           if (!name || !age || !genre || !artist) {
               errorMessage.innerText = "Woah there! Before we proceed, we just need a little bit of information before we can find you a new beat!";
               return; // Stop further execution
           }


           // Store profile data
           profile = { name, age, genre, artist };
           displayProfileInfo();
           switchSection('genre-section'); // Move to genre selection section
       }


       function displayProfileInfo() {
           const profileInfo = document.getElementById('profile-info');
           profileInfo.innerHTML = `
               <strong>Name:</strong> ${profile.name}<br>
               <strong>Age:</strong> ${profile.age}<br>
               <strong>Favorite Genre:</strong> ${profile.genre}<br>
               <strong>Favorite Artist:</strong> ${profile.artist}
           `;
       }


       function switchSection(sectionId) {
           // Hide all sections
           document.querySelectorAll('.section').forEach(section => {
               section.classList.remove('active');
           });
           // Show the selected section
           document.getElementById(sectionId).classList.add('active');
       }


       function generateRandomSelection() {
           const randomGenre = genres[Math.floor(Math.random() * genres.length)];
           const randomArtist = artists[Math.floor(Math.random() * artists.length)];
           const resultDiv = document.getElementById('result');
           resultDiv.innerHTML = `
               Awesome, your results are in!<br>
               Here is your new genre: <strong>${randomGenre}</strong>!<br>
               and this is your new artist: <strong>${randomArtist}</strong>!
           `;
       }
   </script>
