    <script>
        let profiles = [];

        function createProfile() {
            const name = document.getElementById('name').value;
            const age = document.getElementById('age').value;
            const genre = document.getElementById('music-genre').value;
            const artist = document.getElementById('combo-box').value;

            const errorMessage = document.getElementById('error-message');
            const nextButton = document.getElementById('next-button');
            errorMessage.innerText = ''; // Clear previous messages

            if (!name || !age || !genre || !artist) {
                errorMessage.innerText = "Woah there! Before we proceed, we just need a little bit of information before we can find you a new beat!";
                nextButton.style.display = 'none'; // Hide Next button if validation fails
                return; // Stop further execution
            }

            const profile = { name, age, genre, artist };
            profiles.push(profile);
            displayProfiles();
            clearForm();
            nextButton.style.display = 'block'; // Show Next button after successful profile creation
        }

        function displayProfiles() {
            const profileResults = document.getElementById('profile-results');
            profileResults.innerHTML = '';

            profiles.forEach(profile => {
                const card = document.createElement('div');
                card.className = 'profile-card';
                card.innerHTML = `<strong>Name:</strong> ${profile.name}<br>
                                  <strong>Age:</strong> ${profile.age}<br>
                                  <strong>Favorite Genre:</strong> ${profile.genre}<br>
                                  <strong>Favorite Artist:</strong> ${profile.artist}`;
                profileResults.appendChild(card);
            });
        }

        function clearForm() {
            document.getElementById('name').value = '';
            document.getElementById('age').value = '';
            document.getElementById('music-genre').value = '';
            document.getElementById('combo-box').value = '';
        }

        function goToNextPage() {
            window.location.href = 'nextpage.html'; // Redirects to the next page
        }
    </script>
